<Window x:Class="WpfControls.UI.WindowImageFloatWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControls.UI"
        mc:Ignorable="d"
        Height="240" Width="264" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="None" WindowStartupLocation="Manual" FontSize="11.5">
	<Border x:Name="border" Background="White" BorderThickness="1" BorderBrush="#808080" Focusable="True" >
		<Grid x:Name="grid">
			<local:Button x:Name="butDockThis" Width="77" Height="24" Margin="14,83,0,0" Text="Dock This" Click="butDockThis_Click"  />
			<local:Button x:Name="butCloseOthers" Width="77" Height="24" Margin="14,112,0,0" Text="Close Others" Click="butCloseOthers_Click"  />
			<local:Button x:Name="butShowAll" Width="77" Height="24" Margin="14,141,0,0" Text="Show All" Click="butShowAll_Click" />
			<local:ListBox x:Name="listBoxWindows" Width="209" Height="20" Margin="15,193,0,0" />
			<local:Label x:Name="labelWindows" Width="100" Height="18" Margin="14,173,0,0" Text="Open Windows" VAlign="Bottom" />


		</Grid>
	</Border>
</Window>
